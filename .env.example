# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/proyecto3_db

# JWT Secrets
JWT_SECRET_AUTH=your-secret-auth-key
JWT_SECRET_REFRESH=your-secret-refresh-key
JWT_SECRET_EMAIL_VERIFICATION=your-secret-email-verification-key
JWT_SECRET_PASSWORD_RESET=your-secret-password-reset-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRATION=15m
REFRESH_TOKEN_EXPIRATION=7d
EMAIL_VERIFICATION_TOKEN_EXPIRATION=24h
RESET_PASSWORD_TOKEN_EXPIRATION=1h

# Database
DB_DATABASE=proyecto3_db
DB_HOST=localhost
DB_PORT=27017
DB_USERNAME=
DB_PASSWORD=
DB_SCHEMA=proyecto3_db

# Cookies
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=strict
COOKIE_DOMAIN=

# App
NODE_ENV=development
PORT=3001

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# CSRF
CSRF_SECRET=your-csrf-secret-key

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3001/api/usuario/google/callback
