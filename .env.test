# MongoDB Configuration for Testing
MONGODB_URI=mongodb://localhost:27017/proyecto3_test_db

# JWT Secrets
JWT_SECRET_AUTH=test-secret-auth-key-12345
JWT_SECRET_REFRESH=test-secret-refresh-key-12345
JWT_SECRET_EMAIL_VERIFICATION=test-secret-email-verification-key-12345
JWT_SECRET_PASSWORD_RESET=test-secret-password-reset-key-12345
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRATION=15m
REFRESH_TOKEN_EXPIRATION=7d
EMAIL_VERIFICATION_TOKEN_EXPIRATION=24h
RESET_PASSWORD_TOKEN_EXPIRATION=1h

# Database
DB_DATABASE=proyecto3_test_db
DB_HOST=localhost
DB_PORT=27017
DB_USERNAME=
DB_PASSWORD=
DB_SCHEMA=proyecto3_test_db

# Cookies
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=strict
COOKIE_DOMAIN=

# App
NODE_ENV=test
PORT=3001

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# CSRF
CSRF_SECRET=test-csrf-secret-key-12345

# Google OAuth (optional for tests)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3001/api/usuario/google/callback
